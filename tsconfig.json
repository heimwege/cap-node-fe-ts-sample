{
  "compilerOptions": {
    "target": "es2022",
    "module": "CommonJS",
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "allowJs": true,
    "strict": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "rootDir": "./app",
    "baseUrl": "./app"
  },
  "exclude": ["**/node_modules/", "**/dist/", "**/target/"]
}